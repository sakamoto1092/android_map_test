    <application
        android:allowBackup="true"
        android:icon="@drawable/icon72"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name="com.example.maptest.SplashActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.maptest.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>

                <!-- <action android:name="android.intent.action.MAIN" /> -->
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyC3JjsFNRSBmhaxoaCoqPTla965ndduJts" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="com.example.maptest.SubActivity"
            android:label="@string/title_activity_sub"
            android:parentActivityName="com.example.maptest.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.maptest.MainActivity" />
        </activity>
        <activity
            android:name="com.example.maptest.PageActivity"
            android:label="@string/title_activity_page" >
        </activity>
    </application>

</manifest>
